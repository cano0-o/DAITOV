<% if current_tutor %>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DAITOV - Menú del Tutor</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #f5f5f5, #e0e0e0); /* Fondo degradado */
            font-family: 'Arial', sans-serif; /* Fuente profesional */
        }

        .menu-container {
            max-width: 1000px; /* Más ancho para acomodar más contenido */
            margin: 0 auto;
            padding: 2rem;
            margin-top: 5%;
        }
        
        .form-menu {
            background: rgb(255, 255, 255); /* Fondo blanco para el menú */
            border-radius: 8px;
            padding: 2rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Sombra más pronunciada */
        }
        
        .copyright {
            text-align: center;
            margin-top: 2rem;
            color: #6c757d; /* Texto gris para el copyright */
            font-size: 0.9rem;
        }

        .logo {
            width: 100px; /* Tamaño reducido */
            height: auto;
            margin-bottom: 1.5rem;
        }

        .menu-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 2rem;
        }

        .menu-header h3 {
            margin: 0;
            font-size: 1.5rem;
            color: #333; /* Color oscuro para el título */
        }

        .nav-tabs {
            margin-bottom: 1.5rem;
        }

        .nav-tabs .nav-link {
            color: #055D9A; /* Color azul para las pestañas */
            border: 1px solid transparent;
            border-radius: 8px 8px 0 0;
            transition: background-color 0.3s ease;
        }

        .nav-tabs .nav-link.active {
            color: #495057; /* Color oscuro para la pestaña activa */
            background-color: #f8f9fa; /* Fondo gris claro */
            border-color: #dee2e6 #dee2e6 #f8f9fa;
        }

        .nav-tabs .nav-link:hover {
            background-color: #e9ecef; /* Fondo más oscuro al pasar el mouse */
        }

        .tab-content {
            padding: 1rem;
            border: 1px solid #dee2e6;
            border-top: none;
            border-radius: 0 0 8px 8px;
        }

        .btn-primary {
            background-color: #007bff; /* Color azul para botones */
            border: none;
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #0056b3; /* Color azul más oscuro al pasar el mouse */
        }

        .btn-danger {
            background-color: #dc3545; /* Color rojo para botones de limpiar */
            border: none;
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
            transition: background-color 0.3s ease;
        }

        .btn-danger:hover {
            background-color: #c82333; /* Color rojo más oscuro al pasar el mouse */
        }
        .btn-primary {
        background-color: rgb(5, 93, 154);
        border: none;
        box-shadow: 0 4px 10px rgba(5, 93, 154, 0.4);
        transition: all 0.3s ease;
        }

        .btn-primary:hover {
        background-color: rgb(0, 60, 110);
        box-shadow: 0 6px 14px rgba(0, 60, 110, 0.5);
        }
	
	.btn-logout {
	position: absolute;
	top: 20px;
	right: 20px;
	background-color: #dc3545;
	border-radius: 20px;
	padding: 8px 20px;
	font-size: 0.9rem;
	transition: all 0.3s ease;
	}

	.btn-logout:hover {
	background-color: #bb2d3b;
	transform: translateY(-2px);
	}
    </style>
    <!-- FontAwesome para iconos -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body>

    <div class="menu-container">
        <div class="form-menu">
            <!-- Encabezado con logo y título -->
            <div class="menu-header">
                <%= image_tag 'logo.png', alt: 'Logo DAITOP', class: 'logo' %>
                <h3>DAITOV - Menú del Tutor</h3>
            </div>

            <!-- Pestañas del Menú -->
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="registrar-tab" data-bs-toggle="tab" data-bs-target="#registrar" type="button" role="tab" aria-controls="registrar" aria-selected="true">
                        <i class="fas fa-user-plus"></i> Registrar Paciente
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="info-tab" data-bs-toggle="tab" data-bs-target="#info" type="button" role="tab" aria-controls="info" aria-selected="false">
                        <i class="fas fa-info-circle"></i> Ver Info Usuario
                    </button>
            </ul>

            <!-- Contenido de las Pestañas -->
            <div class="tab-content" id="myTabContent">
                <!-- Pestaña: Registrar Usuario -->
                <div class="tab-pane fade show active" id="registrar" role="tabpanel" aria-labelledby="registrar-tab">
                  <h4>Registrar Nuevo Paciente</h4>
		  <%= form_with(model: @paciente, url: pacientes_path, local: true) do |form| %>
                    <form>
                      <div class="mb-3">
			<%= form.label :nombre, "Nombre del Paciente", class: "form-label" %>
			<%= form.text_field :nombre, class: "form-control", required: true %>
                      </div>
                      <div class="mb-3">
			<%= form.label :paternal_last_name, "Apellido Paterno", class: "form-label" %>
			<%= form.text_field :paternal_last_name, class: "form-control", required: true %>
                      </div>
                      <div class="mb-3">
			<%= form.label :maternal_last_name, "Apellido Materno", class: "form-label" %>
			<%= form.text_field :maternal_last_name, class: "form-control", required: true %>
                      </div>
		      <div class="mb-3">
			<%= form.label :sexo, "Género", class: "form-label" %>
			<%= form.select :sexo, 
			    options_for_select([
			    ["Selecciona...", ""],
			    ["Masculino", "masculino"],
			    ["Femenino", "femenino"],
			    ["Otro", "otro"]
			    ]), 
			    {}, 
			    { class: "form-control", required: true } 
			    %>
		      </div>
                      <div class="mb-3">
			<%= form.label :birth_date, "Fecha de Nacimiento", class: "form-label" %>
			<%= form.date_field :birth_date, class: "form-control", required: true %>
                      </div>
		      <div class="mb-3">
			<% [
			   [:nivel_discapacidad_cognitiva, "Cognitiva"],
			   [:nivel_discapacidad_visual, "Visual"],
			   [:nivel_discapacidad_auditiva, "Auditiva"],
			   [:nivel_discapacidad_motriz_gruesa, "Motriz Gruesa"],
			   [:nivel_discapacidad_motriz_fina, "Motriz Fina"]
			   ].each do |field, label| %>
			<div class="mb-3">
			  <%= form.label field, "Nivel de Discapacidad #{label}", class: "form-label" %>
			  <%= form.select field, 
			      options_for_select([
			      ["Selecciona...", ""],
			      ["Leve", "leve"],
			      ["Moderado", "moderado"],
			      ["Severo", "severo"]
			      ]),
			      {},
			      { class: "form-control", required: true } 
			      %>
			</div>
			<% end %>
		      </div>
		      <%= form.submit "Registrar", class: "btn btn-primary" %>
		      <button type="reset" class="btn btn-danger">Limpiar</button>
		      <% end %>
		<!-- </div> -->
		
		</div>
                <!-- Pestaña: Ver Info Usuario -->
		<div class="tab-pane fade" id="info" role="tabpanel" aria-labelledby="info-tab">
		  <h4>Consulta de Pacientes</h4>
		  
		  <!-- Barra de Búsqueda -->
		  <div class="mb-4">
		    <%= form_with url: buscar_pacientes_path, method: :get, local: true, class: "d-flex" do |form| %>
		    <%= form.text_field :busqueda, 
			class: "form-control me-2", 
			placeholder: "Buscar por nombre, apellido o ID",
			value: params[:busqueda] %>
		    <%= form.submit "Buscar", class: "btn btn-outline-primary" %>
		    <% end %>
		  </div>

		  <!-- Listado de Pacientes -->
		  <div class="patient-list">
		    <% @pacientes.each do |paciente| %>
		    <div class="card mb-3">
                      <div class="card-body">
			<h5 class="card-title">
                          <%= link_to paciente.nombre_completo, paciente_path(paciente), class: 'text-decoration-none' %>
			</h5>
			<p class="card-text">
                          <strong>ID:</strong> <%= paciente.id %> |
                          <strong>Género:</strong> <%= paciente.sexo.titleize %> |
                          <strong>Edad:</strong> <%= age(paciente.birth_date) %> años
			</p>

			<!-- Detalles completos (ocultos inicialmente) -->
			<div class="patient-details" id="details-<%= paciente.id %>" style="display: none;">
                          <table class="table table-bordered mt-3">
                            <tbody>
                              <tr>
                                <th>Fecha de Nacimiento</th>
                                <td><%= paciente.birth_date.strftime("%d/%m/%Y") %></td>
                              </tr>
                              <tr>
                                <th>Discapacidad Cognitiva</th>
                                <td><%= paciente.nivel_discapacidad_cognitiva %></td>
                              </tr>
                              <tr>
                                <th>Discapacidad Visual</th>
                                <td><%= paciente.nivel_discapacidad_visual %></td>
                              </tr>
                              <tr>
                                <th>Discapacidad Auditiva</th>
                                <td><%= paciente.nivel_discapacidad_auditiva %></td>
                              </tr>
                              <tr>
                                <th>Disc. Motriz Gruesa</th>
                                <td><%= paciente.nivel_discapacidad_motriz_gruesa %></td>
                              </tr>
                              <tr>
                                <th>Disc. Motriz Fina</th>
                                <td><%= paciente.nivel_discapacidad_motriz_fina %></td>
                              </tr>
                            </tbody>
                          </table>
			</div>
                      </div>
		    </div>
		    <% end %>
		  </div>
		</div>

		<% content_for :javascript do %>
		<script>
		  document.querySelectorAll('.toggle-details').forEach(button => {
		      button.addEventListener('click', () => {
			  const detailsDiv = document.getElementById(`details-${button.dataset.pacienteId}`);
			  detailsDiv.style.display = detailsDiv.style.display === 'none' ? 'block' : 'none';
			  button.textContent = detailsDiv.style.display === 'none' ? 'Ver detalles' : 'Ocultar detalles';
		      });
		  });
		</script>
		<% end %>
            </div>
        </div>

        <p class="copyright mt-5 mb-3 text-muted">&copy; Instituto Tecnologico de Ensenada</p>
    </div>

    <div class="text-center mt-4">
      <%= button_to "Cerrar Sesión", destroy_session_path, 
          method: :delete, 
          class: 'btn btn-primary btn-sm' %>
    </div>

    <p class="copyright mt-5 mb-3 text-mute">Has iniciado sesión como: <%= current_tutor.email %></p>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<% else %>

